<?xml version="1.0" encoding="utf-8"?>
<com.example.irving.myproject1.activity.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff3097fd"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_topbanner_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_titleBar"
            android:layout_weight="1"
            android:background="@drawable/title_seach_drawable_selector"
            android:textColor="@drawable/title_seach_textcolor_selector"
            android:layout_marginLeft="5dp"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_sousuokuang"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:text="全名搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/seach_titleBar"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_game"
            android:src="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignRight="@id/iv_game"
            android:src="@drawable/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.irving.myproject1.activity.view.TitleBar>